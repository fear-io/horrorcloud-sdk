{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
  },
  "types": ["node"],
  "lib": ["ES6", "DOM"],
  "exclude": ["node_modules"]
}
